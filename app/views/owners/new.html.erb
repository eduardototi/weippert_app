<div class="container">
  <div class="container-form">
  <%= simple_form_for(@owner) do |f| %>
    <%= f.error_notification %>
    <h3 class="text-center">Cadastro de Proprietário</h3>
    <div class="form-inputs">
      <%= f.input :name, label: "Nome:" %>
      <%= f.input :cpf, label: "CPF:" %>
      <%= f.input :rg, label: "RG" %>
      <%= f.input :birthdate, label: "Nascimento:" %>
      <%= f.input :email, label: "Email" %>
      <%= f.input :phone, label: "Telefone" %>
      <%= f.input :address, label: "Endereço" %>
      <%= f.input :marital_status, label: "Estado Cívil" %>
    </div>
    <div class="form-actions text-center">
      <%= f.button :submit, "Enviar", class: 'btn btn-primary' %>
    </div>
  <% end %>
  </div>
</div>