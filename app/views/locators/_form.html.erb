<div class="container">
    <div class="container-form">
        <%= simple_form_for(locator) do |f| %>
            <%= f.error_notification %>
            <h3 class="text-center">Cadastro de Locatário</h3>
            <div class="form-inputs">
                <%= f.input :name, label: "Nome:" %>
                <%= f.input :cpf, label: "CPF:" %>
                <%= f.input :rg, label: "RG" %>
                <%= f.input :birthdate, :order => [ :day, :month, :year ], label: "Nascimento:" %>
                <%= f.input :email, label: "Email" %>
                <%= f.input :phone, label: "Telefone" %>
                <%= f.input :address, label: "Endereço" %>
                <%= f.input :marital_status, label: "Estado Cívil" %>

                <%= f.input :contact_name, label: "Contato:" %>
                <%= f.input :contact_phone, label: "Telefone:" %>
                <%= f.input :contact_relation, label: "Relação:" %>
                <%= f.input :contact_address, label: "Endereço" %>
            </div>
            <div class="form-actions text-center">
                <%= f.button :submit, "Enviar", class: 'btn btn-primary' %>
            </div>
        <% end %>
    </div>
</div>