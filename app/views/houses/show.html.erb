<div class="container mt-4">
  <table class="table table-bordered table-dark">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Nome</th>
        <th scope="col">descrição</th>
        <th scope="col">Endereço</th>
        <th scope="col">Situação</th>
        <th scope="col">Proprietário</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <th scope="row"><%= @house.id %></th>
          <td><%= @house.house_name %></td>
          <td><%= @house.description %></td>
          <td><%= @house.address %></td>
          <td><%= @house.rental_status ? 'Alugada' : "Disponível" %></td>
          <td><%= @house.owner.name %></td>
        </tr>
    </tbody>
  </table>

  <div class="links text-center">
    <%= link_to 'Editar', edit_house_path(@house), class: 'btn btn-primary mb-3' %>
    <%= link_to "Excluir", @house, method: :delete, data: { confirm: 'Tem certeza que deseja deletar este cliente?' }, class: 'btn btn-danger mb-3' %>
  </div>
</div>